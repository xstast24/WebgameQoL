{
    "manifest_version": 2,
    "name": "Webgame QoL",
    "description": "Provide convenient utils for webgame.cz players.",
    "version": "0.7",
    "author": "Bota007",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://www.webgame.cz/*"
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icon.png",
        "default_title": "Webgame QoL"
    },
    "content_scripts": [
        {
            "js": ["config.js", "common.js", "content/content.js"],
            "css": ["content/content.css"],
            "matches": ["https://www.webgame.cz/wg/index.*"]
        }
    ],
    "background": {
        "scripts": ["config.js", "common.js", "background/background.js"],
        "persistent": true
    }
}