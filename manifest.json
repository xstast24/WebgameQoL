{
    "manifest_version": 2,
    "name": "Webgame QoL",
    "description": "Provide convenient utils for webgame.cz players.",
    "version": "0.1",
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png",
        "default_title": "Webgame QoL"
    },
    "author": "Bota007"
}